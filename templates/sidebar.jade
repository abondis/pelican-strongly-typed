#sidebar.4u
  section
    header
      h2 Latest articles
    ul.divided
      for article in articles[0:2]
        li
          article.is-excerpt
            header
              span.date #{article.date|strftime('%x')}  
                strong #{article.date|strftime('%A')}
              h3
                a(href=article.url) #{article.title}
            p!= article.summary
            ul.actions
              li
                a.button.button-icon.fa.fa-file(href=article.url) Learn More